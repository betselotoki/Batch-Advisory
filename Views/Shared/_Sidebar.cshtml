
<div id="mySidebar" class="sidebar">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

    <div class="login-login">

        <span class="login-text"> School of <br /> your dreams</span>

        <form class="login-form" asp-controller="Home" asp-action="ProcessLogin">
            
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label class="control-label login-text07">SRC:</label>
                <input type="text" name="Src" class="login-text09" />
                @*<span asp-validation-for="Src" class="text-danger"></span>*@
            </div>

            <div class="form-group top-margin">
                <label class="control-label login-text07">Password</label>
                <input type="password" name="Password" class="login-text09" />
                @*<span asp-validation-for="Password" class="text-danger"></span>*@
            </div>

            <a class="login-text15"><span>Forgot Password?</span></a>


            <div class="form-group">
                <input type="submit" value="Login" class="login-button" />
            </div>
        </form>

        <div class="advisor-login">
            <a asp-controller="Home" asp-action="AdvisorLogin">Advisor Login</a>
        </div>
    </div>
</div>